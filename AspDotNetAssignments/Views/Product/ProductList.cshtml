
@{
    ViewData["Title"] = "ProductList";
}

<h1>ProductList</h1>
<table class="table table bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (Product p in ViewBag.Products)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
        </tr>
    }

</table>
